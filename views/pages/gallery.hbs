
    {{#each hero}}
    <div class="hero">
      <a href="/gallery/{{id}}">
        <img src="{{link}}" class="hero-image">
      </a>
    </div>
    {{/each}}
    <hr class="hr-under-hero"/>

    <div class="image-grid">

    {{#each photos}}

        <div class="photo-container">
          <a href="/gallery/{{id}}">
            <img src="{{link}}" class="photo">
          </a>
          <br>
          <div class="grid-captions">
          {{title}} - {{author}}
          </div>
        </div>

    {{/each}}

    </div>


